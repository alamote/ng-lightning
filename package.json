{
  "name": "ng-lightning-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "pug": "gulp pug",
    "pug:watch": "gulp pug:watch",
    "lib:watch": "ng build ng-lightning --watch",
    "app:serve": "ng serve --port 1111",
    "prestart": "rimraf dist && npm run pug",
    "start": "run-p -r pug:watch app:serve",
    "build": "npm run lib:build && npm run demo:build",
    "prelib:build": "rimraf dist/ng-lightning && npm run pug",
    "lib:build": "ng build ng-lightning --configuration=production",
    "predemo:build": "rimraf dist/ng-lightning-app && npm run pug",
    "demo:build": "ng build --prod --base-href=/ng-lightning/",
    "pretest": "npm run pug",
    "test": "ng test ng-lightning",
    "test:github": "ng test ng-lightning --configuration github",
    "lib:tdd": "ng test ng-lightning --source-map=false --watch=true",
    "pretdd": "npm run pug",
    "tdd": "run-p -r pug:watch lib:tdd",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "prerelease": "npm run test && npm run lib:build",
    "release": "node scripts/release",
    "demo:release": "npm run demo:build && node scripts/gh-pages"
  },
  "dependencies": {
    "@angular/animations": "^12.0.1",
    "@angular/cdk": "^12.0.1",
    "@angular/common": "^12.0.1",
    "@angular/compiler": "^12.0.1",
    "@angular/core": "^12.0.1",
    "@angular/forms": "^12.0.1",
    "@angular/platform-browser": "^12.0.1",
    "@angular/platform-browser-dynamic": "^12.0.1",
    "@angular/router": "^12.0.1",
    "classlist.js": "^1.1.20150312",
    "cleave.js": "^1.6.0",
    "core-js": "^2.6.3",
    "date-fns": "^2.6.0",
    "ngx-cleave-directive": "^1.1.3",
    "rxjs": "~6.5.3",
    "semver": "^5.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.1",
    "@angular/cli": "~12.0.1",
    "@angular/compiler-cli": "^12.0.1",
    "@angular/language-service": "^12.0.1",
    "@salesforce-ux/design-system": "~2.9.0",
    "@stackblitz/sdk": "^1.3.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "^2.0.6",
    "@types/node": "^12.11.1",
    "app-root-path": "^2.2.0",
    "codelyzer": "^6.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "del": "^3.0.0",
    "gh-pages": "^2.1.1",
    "gulp": "^4.0.2",
    "gulp-changed": "^3.2.0",
    "gulp-data": "^1.3.1",
    "gulp-pug": "^4.0.1",
    "inquirer": "^6.2.2",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-sauce-launcher": "^2.0.2",
    "markdown-it": "^8.4.2",
    "ng-packagr": "^12.0.0",
    "npm-run-all": "^4.1.5",
    "prismjs": "^1.23.0",
    "protractor": "~7.0.0",
    "pug": "^3.0.2",
    "q": "^1.5.1",
    "replace": "^1.2.0",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.4",
    "simple-git": "^1.107.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.2.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "yarn": "^1.3.0"
  }
}
